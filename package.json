{
  "name": "chrome-extension-react-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "copy-to-distribution": "cp public/manifest.json distribution/manifest.json && cp public/icon.png distribution/icon.png",
    "prebuild": "rimraf distribution && mkdir distribution",
    "build": "tsc -b && vite build --outDir distribution",
    "postbuild": "npm run copy-to-distribution",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prettify": "npx prettier --write --log-level silent .",
    "watch": "node watch.js",
    "zip": "rimraf zipped.zip || true && zip -r zipped.zip distribution/",
    "start:firefox": "web-ext run --source-dir ./distribution/",
    "release": "webstore upload --source=distribution --auto-publish"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.3",
    "@types/node": "22",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.8",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.1",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.24.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "^5.8.2",
    "vite": "^6.2.5",
    "vite-plugin-static-copy": "^2.3.0"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild"
    ],
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
